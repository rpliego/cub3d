{
	"version": "2.0.0",
	"tasks": [
	  {
		"label": "Build with make",
		"type": "shell",
		"command": "make",
		"group": {
		  "kind": "build",
		  "isDefault": true
		},
		"presentation": {
		  "reveal": "always",
		  "panel": "shared",
		  "showReuseMessage": false
		},
		"problemMatcher": {
		  "owner": "cpp",
		  "fileLocation": ["relative", "${workspaceFolder}"],
		  "pattern": {
			"regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
			"file": 1,
			"line": 2,
			"column": 3,
			"severity": 4,
			"message": 5
		  }
		}
	  }
	]
  }
  
  